{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc build active file",
      "command": "gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/../bin/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "detail": "Task generated by Debugger."
    },
    {
      "type": "cppbuild",
      "label": "C/C++: gcc build and run active file",
      "command": "gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/../bin/${fileBasenameNoExtension}.exe",
        "&&",
        "${fileDirname}/../bin/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: CMake build",
      "command": "cmake .. && make",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
      //"detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: CMake build and run",
      "command": "cmake .. && make && cd bin && ./Machi_Koro.exe",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": ["$gcc"]
      //"detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: CMake debug build",
      "command": "cmake -DCMAKE_BUILD_TYPE=Debug .. && make",
      "options": {
        "cwd": "${workspaceFolder}/debug/build"
      },
      "problemMatcher": ["$gcc"]
      //"detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
